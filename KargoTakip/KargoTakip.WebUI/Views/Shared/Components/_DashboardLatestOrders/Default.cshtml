@model List<KargoTakip.WebUI.Dtos.ResultSevkiyatDto>

<div class="card">
    <div class="card-header border-transparent">
        <h3 class="card-title">Son Sevkiyatlar</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>Takip No</th>
                        <th>Gönderen</th>
                        <th>Alıcı</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                        <th style="width: 100px">İşlemler</th> @* Yeni başlık eklendi *@
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><a href="#">@item.TakipNo</a></td>
                                <td>@item.Gönderen</td>
                                <td>@item.Alıcı</td>
                                <td>
                                    @if (item.Durum == "Teslim Edildi")
                                    {
                                        <span class="badge badge-success">@item.Durum</span>
                                    }
                                    else if (item.Durum == "Yolda")
                                    {
                                        <span class="badge badge-warning">@item.Durum</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-info">@item.Durum</span>
                                    }
                                </td>
                                <td>@item.OluşturulmaTarihi.ToShortDateString()</td>
                                <td>
                                    @* Silme Butonu *@
                                    <a href="/Sevkiyat/DeleteShipment/@item.ID"
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('@item.TakipNo numaralı sevkiyatı silmek istediğinize emin misiniz?')">
                                        <i class="fas fa-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">Henüz bir sevkiyat verisi bulunamadı.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer clearfix">
        <a href="/Sevkiyat/CreateShipment" class="btn btn-primary">Yeni Sevkiyat Oluştur</a>
        <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">Tümünü Gör</a>
    </div>
</div>