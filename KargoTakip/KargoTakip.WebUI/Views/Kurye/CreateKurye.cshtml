@using KargoTakip.WebUI.Dtos
@model CreateKuryeDto

@{
    ViewData["Title"] = "Yeni Kurye Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-bold">Yeni Kurye Kaydı</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card card-primary card-outline shadow-lg">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-user-plus mr-2"></i> Kurye Bilgilerini Giriniz</h3>
                    </div>

                    <form method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="AdSoyad">Ad Soyad</label>
                                <input type="text" asp-for="AdSoyad" class="form-control" placeholder="Örn: Erencan Yılmaz" required>
                            </div>

                            <div class="form-group">
                                <label for="AracTipi">Araç Tipi</label>
                                <select asp-for="AracTipi" class="form-control">
                                    <option value="Motosiklet">Motosiklet</option>
                                    <option value="Hafif Ticari">Hafif Ticari (Doblo vb.)</option>
                                    <option value="Kamyonet">Kamyonet</option>
                                    <option value="Bisiklet">Bisiklet</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="Telefon">Telefon Numarası</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    </div>
                                    <input type="text" asp-for="Telefon" class="form-control" placeholder="05XX XXX XX XX" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Durum">Başlangıç Durumu</label>
                                <select asp-for="Durum" class="form-control">
                                    <option value="Sahada">Sahada (Aktif)</option>
                                    <option value="İstirahatli">İstirahatli (Pasif)</option>
                                </select>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-top-0 text-right">
                            <a href="/Kurye/Index" class="btn btn-secondary mr-2">Vazgeç</a>
                            <button type="submit" class="btn btn-primary px-4 shadow">Kuryeyi Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>