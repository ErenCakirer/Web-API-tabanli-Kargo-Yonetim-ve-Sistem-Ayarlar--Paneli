<div class="info-box mb-3 bg-warning">
    <span class="info-box-icon"><i class="fas fa-box"></i></span>
    <div class="info-box-content">
        <span class="info-box-text">Toplam Sevkiyat</span>
        <span class="info-box-number">@ViewBag.ToplamKargo</span>
    </div>
</div>

<div class="info-box mb-3 bg-success">
    <span class="info-box-icon"><i class="fas fa-truck"></i></span>
    <div class="info-box-content">
        <span class="info-box-text">Yoldaki Kargolar</span>
        <span class="info-box-number">@ViewBag.Yolda</span>
    </div>
</div>

<div class="info-box mb-3 bg-danger">
    <span class="info-box-icon"><i class="fas fa-clock"></i></span>
    <div class="info-box-content">
        <span class="info-box-text">Hazırlananlar</span>
        <span class="info-box-number">@ViewBag.Hazirlanan</span>
    </div>
</div>

<div class="info-box mb-3 bg-info">
    <span class="info-box-icon"><i class="fas fa-check-double"></i></span>
    <div class="info-box-content">
        <span class="info-box-text">Teslim Edilenler</span>
        <span class="info-box-number">@ViewBag.TeslimEdilen</span>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sevkiyat Dağılımı</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <div class="chart-responsive">
                    <canvas id="pieChart" height="150"></canvas>
                </div>
            </div>
            <div class="col-md-4">
                <ul class="chart-legend clearfix">
                    <li><i class="far fa-circle text-danger"></i> Hazırlanan</li>
                    <li><i class="far fa-circle text-success"></i> Yolda</li>
                    <li><i class="far fa-circle text-warning"></i> Beklemede</li>
                    <li><i class="far fa-circle text-info"></i> Teslimat</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Son Eklenen Sevkiyatlar</h3>
    </div>
    <div class="card-body p-0">
        <ul class="products-list product-list-in-card pl-2 pr-2">
           
            <li class="item">
                <div class="product-info" style="margin-left: 10px;">
                    <a href="javascript:void(0)" class="product-title">Sevkiyat #10234 <span class="badge badge-warning float-right">Hazırlanıyor</span></a>
                    <span class="product-description">Ankara -> İstanbul | Kurye: Erencan</span>
                </div>
            </li>
        </ul>
    </div>
    
</div>

