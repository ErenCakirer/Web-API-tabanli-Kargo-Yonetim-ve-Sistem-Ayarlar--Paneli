@using KargoTakip.WebUI.Dtos
@model List<ResultKuryeDto>


@{
    ViewData["Title"] = "Kurye Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-bold">Kurye Kontrol Paneli</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a href="/Kurye/CreateKurye" class="btn btn-primary"><i class="fas fa-plus"></i> Yeni Kurye Ekle</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card card-dark">
            <div class="card-header">
                <h3 class="card-title">Sistemdeki Kayıtlı Kuryeler</h3>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover m-0">
                    <thead>
                        <tr>
                            <th style="width: 80px">ID</th>
                            <th>Ad Soyad</th>
                            <th>Araç Tipi</th>
                            <th>Telefon</th>
                            <th>Durum</th>
                            <th style="width: 150px">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td><span class="text-muted text-bold">#@item.KuryeId</span></td>
                                    <td>@item.AdSoyad</td>
                                    <td>@item.AracTipi</td>
                                    <td>@item.Telefon</td>
                                    <td>
                                        @if (item.Durum == "Sahada")
                                        {
                                            <span class="badge badge-success px-3">Sahada</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning px-3 text-dark">İstirahatli</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/Kurye/UpdateKurye/@item.KuryeId" class="btn btn-info btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="/Kurye/DeleteKurye/@item.KuryeId" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <i class="fas fa-info-circle text-info"></i> Henüz kayıtlı kurye bulunamadı veya API bağlantısı kurulamadı.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>