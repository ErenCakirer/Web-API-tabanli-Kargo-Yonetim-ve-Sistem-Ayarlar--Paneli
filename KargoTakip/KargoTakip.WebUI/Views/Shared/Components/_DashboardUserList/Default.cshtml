@using KargoTakip.Core.Entities
@model List<Kurye>

<div class="card card-outline card-warning">
    <div class="card-header">
        <h3 class="card-title text-bold"><i class="fas fa-motorcycle mr-2"></i> Aktif Kuryelerimiz</h3>
        <div class="card-tools">
            <span class="badge badge-danger">@Model.Count Kurye Sahada</span>
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <ul class="users-list clearfix">
            @foreach (var item in Model)
            {
                <li style="width: 25% !important; float: left;">
                    <img src="@item.FotografUrl" class="img-circle elevation-2" alt="Kurye" style="width:60px; height:60px; object-fit: cover; border: 2px solid #ffc107;">
                    <a class="users-list-name mt-2" href="#">@item.AdSoyad</a>
                    <span class="users-list-date">@item.Durum</span>
                </li>
            }
        </ul>
    </div>
    <div class="card-footer text-center">
        <a href="javascript:void(0)" class="uppercase">Tüm Kuryeleri Gör</a>
    </div>
</div>